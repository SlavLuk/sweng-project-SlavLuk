= form_for(@city) do |f|
  - if @city.errors.any?
    #error_explanation
      %h2
        = pluralize(@city.errors.count, "error")
        prohibited this city from being saved:
      %ul
        - @city.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :city_name
    %br/
    = f.text_field :city_name
  .field
    = f.label :mayor
    %br/
    = f.text_field :mayor
  .field
    = f.label :population
    %br/
    = f.number_field :population
  .field
    = f.label :isCostal
    %br/
    = f.check_box :isCostal
  .field
    = f.label :country_id
    %br/
    = f.text_field :country_id
  .actions
    = f.submit